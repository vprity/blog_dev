{% extends 'base.html.twig' %}

{% block title %}Блог для айтишников{% endblock %}

{% block body %}
    <main>
        <div class="main">
            <div class="container">
                {% for post in posts %}
                    <div class="container-item" onclick="location.href='{{ path('post.show', {id: post.id}) }}';">
                        <div class="item-img">
                            <img src="{{ asset('uploads/posts/img/' ~ post.imgPath ) }}" alt="{{ post.title }}">
                        </div>
                        <div class="item-title">
                            <h2>{{ post.title }}</h2>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </main>
{% endblock %}
