<aside>
    <nav class="main-nav">
        <ul>
            <li class="logo-text"><a href="/">DEV_</a></li>
            {% for category in categories.getCategories %}
                <li>
                    <a href="#"><i class="{{ category.icon }}"></i><span>{{ category.name }}</span></a>
                </li>
            {% endfor %}
            <li class="nav-separator"></li>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}

                {% if is_granted('ROLE_ADMIN') %}
                    <li>
                        <a href="#"><i class="fal fa-user-crown"></i><span>Admin panel</span></a>
                    </li>
                    <li class="nav-separator"></li>
                {% endif %}

                {% if is_granted('ROLE_AUTHOR') %}
                    <li>
                        <a href="{{ path('author.index') }}"><i class="fal fa-user-edit"></i><span>Author panel</span></a>
                    </li>
                    <li class="nav-separator"></li>
                {% endif %}

                <li>
                    <a href="{{ path('profile.index') }}"><i class="fal fa-user"></i><span>User</span></a>
                </li>
                <li>
                    <a href="{{ path('app_logout') }}"><i class="fal fa-sign-out"></i><span>Sign Out</span></a>
                </li>
            {% else %}
                <li>
                    <a href="{{ path('app_login') }}"><i class="fal fa-sign-in"></i><span>Sign In</span></a>
                </li>
                <li>
                    <a href="{{ path('app_registration') }}"><i class="fal fa-user-plus"></i><span>Sign Up</span></a>
                </li>
            {% endif %}
        </ul>
    </nav>
</aside>